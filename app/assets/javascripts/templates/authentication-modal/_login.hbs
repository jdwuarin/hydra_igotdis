<div class="modal-body">

  {{#if loginFailed}}
    <div class="alert alert-danger">Invalid username or password.
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
    </div>
  {{/if}}

  {{#if isSlowConnection}}
    <div class="alert alert-info">The request seems to be taking more time than usual, please wait.
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
    </div>
  {{/if}}

  <form {{action 'login' on='submit'}}>
    <div class="form-group">
      <p>{{input class="form-control" placeholder="username/email" value=login}}</p>
      <p>{{input type="password" class="form-control" placeholder="password" value=password}}</p>
      <p><button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Login</button>
    </div>
  </form>
</div>
<div class="modal-footer">
  {{! <a>Not part of the action yet?</a> }}
  <button type="button" class="btn btn-default" {{action 'goToSignup'}}>Signup</button>
</div>
