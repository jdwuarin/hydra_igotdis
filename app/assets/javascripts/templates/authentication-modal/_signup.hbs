<div class="modal-body">
    <form {{action 'ok' on='submit' target=view}}>
      <div class="form-group">
        <label>Name</label>
        {{input class="form-control" value=name}}
      </div>
    </form>

</div>
<div class="modal-footer">
  <button type="button" class="btn btn-primary" {{action 'signup'}}>Signup</button>
  <button type="button" class="btn btn-default" {{action 'goToLogin'}}>Login</button>
</div>
