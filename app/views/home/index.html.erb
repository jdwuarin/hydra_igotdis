<% provide(:title, 'Home') %>

<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="mainpage">
        <div class="col-md-5">
          <h1>Live now :</h1>
          <img class="img-responsive" src= <%= asset_path('logo_worlds_lol.png') %> ></img>
        </div>
      </div>
      <div class="col-md-2">
        <% if user_signed_in? %>
          <%= link_to "Start Now", tournaments_latest_path, 
          :type => "button", :class => "btn btn-default" %>
        <% else %>
          <%= link_to "Start Now", how_to_play_path, 
          :type => "button", :class => "btn btn-default" %>
        <% end %>
      </div>
      <div class="col-md-5">
        <div class="news">
          <h1>Predict game outcomes, be part of the Action</h1>
          <h3>Be part of the League of Legends World Cup prediction
            competition and win cool prizes!
          </h3>
        </div>
      </div>
    </div>
  </div>
</div>