
<div class="container">
  <div class="Group_A">
    <%= link_to "Group A", url_for(:group => 1), :type => "button",
        :class => "btn btn-default" %>
    <%= link_to "Group B", url_for(:group => 2), :type => "button",
        :class => "btn btn-default" %>
    <%= link_to "Group C", url_for(:group => 3), :type => "button",
        :class => "btn btn-default" %>
    <%= link_to "Group D", url_for(:group => 4), :type => "button",
        :class => "btn btn-default" %>
  </div>
</div>

<div class="container">
  <% matches.each_with_index do |match, index| %>

    <% if index.modulo(2) == 0 %>

      <div class="matches-line">
        <div class="row">

            <%= render 'lwc_stage_round_match_open', 
                match: match %>

            <div class="col-md-2">
            </div>

            <% if index < matches.count - 1 %>

              <%= render 'lwc_stage_round_match_open',
                  match: matches[index+1] %>

            <% end %>

        </div>
      </div>
     <% end %>

  <% end %>

</div>
