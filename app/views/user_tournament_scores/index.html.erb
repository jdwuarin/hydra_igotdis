<div class="space">
</div>

<div class="container">
  <div class="table-responsive">
    <table class="table">
     <div class="ladder">
      <thead>
        <tr>
          <th>Ranking</th>
          <th>Username</th>
          <th>Points</th>
        </tr>
      </thead>
      <tbody>

        <% if @user_tournament_scores %>
          <% @user_tournament_scores.each_with_index do |uts, index| %>
            <tr>
              <td> <%= index + 1 %> </td>
              <td> <%= uts.user.username %> </td>
              <td> <%= uts.score %> </td>
            </tr>
          <% end %>
        <% end %>

      </tbody>
     </div>
    </table>
  </div>
</div>
