
<div class="container">
  <div class="signup responsive">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><p><%= f.label :username %><br />
      <%= f.text_field :username, :autofocus => true, class: "box" %></p></div>

      <div><p><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, class: "box" %></p></div>

      <div><p><%= f.label :password %><br />
      <%= f.password_field :password, class: "box" %></p></div>

      <div><p><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "box" %></p></div>

      <div><%= f.submit "Sign up", class: "btn btn-default" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
