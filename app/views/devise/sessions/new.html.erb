<div class="container">
  <div class="signup responsive">

    <h2>Login</h2>

    <%= render "devise/shared/social_login" %>

    <%= form_for(resource, :as => resource_name,
      :url => session_path(resource_name)) do |f| %>

      <div><p><%= f.label "username/email" %><br />
      <%= f.text_field :login, :autofocus => true, class: "box" %></p></div>

      <div><p><%= f.label :password %><br />
      <%= f.password_field :password, class: "box" %></p></div>

      <% if devise_mapping.rememberable? -%>
        <div><p><%= f.check_box :remember_me %> 
                <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Sign in" , class: "btn btn-default"%></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
